#!/usr/bin/bash

# read: reads in from standard input until the enter delimiter is used and 
# puts the input into the specified variable
read -p "Please enter an upper limit for your roll (>1): " user_num

if [ $user_num -lt 1 ]; then
	echo "error: your number was less than 1"
else 
	# creating a random number between 1 and 20: RANDOM creates rand num between
	# 0 and 32767, so use modulo and +1 to get desired range
	rand_num=$(( 1 + $RANDOM % $user_num ))
	echo "rolling between 1 and $user_num: you rolled a $rand_num!"
fi
